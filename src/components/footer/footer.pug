include ../logotype/logotype.pug
include ../navigation/navigation.pug
include ../input/input.pug

mixin footer()
  .section-wrapper.footer-section-wrapper
    footer.footer
      .footer__column-row
        +logotype({href: '#'})
        .footer-nav-wrapper
          +navigation([{href: '#', type:'nav', value:'About'},{href: '#', type:'nav', value:'Map'},{href: '#', type:'nav', value:'Zoos'}],{class: 'navigation-footer-main'})
          +button({href:'#',type:'filled',addClass:'footer-nav__donate-button',value:'donate for volunteers'})
      .footer__column-wrapper
        .footer__column 
          form.footer__contact-us-form
            h3.footer__contact-us-form-caption.typography__cta Contact us
            +input({type:'text', name:'name', placeholder:'Name', required: true,label:'Name',id:'footer__contact-us-form__name',autocomplete: 'off'})
            +input({type:'email', name:'email', placeholder:'Email', required: true,label:'Email',id:'footer__contact-us-form__email',autocomplete: 'off'})
            +input({type:'textarea', name:'textarea', placeholder:'', required: true,label:'Please enter your message',id:'footer__contact-us-form__textarea',autocomplete: 'off'})
        .footer__column
          address.footer__contact
            p.footer__contact-caption ZOO ONLINE CENTER
            .footer__contact-wrapper
              .footer__contact-address-wrapper
                p.footer__contact-address__address 132, Address District, Street  
                p.footer__contact-address__mode Open Daily 10:00 am - 5:00 pm
              ul.footer__contacts 
                li.footer__contact-item T(702) 163-3433
                li.footer__contact-item zoo.online@gmail.com
              +socials([{href: "#",value:'',icon: 'instagram'},{href: "#",value:'',icon: 'twitter'},{href: "#",value:'',icon: 'youtube'},{href: "#",value:'',icon: 'vk'}])
      .footer__copyright
        span.footer__copyright__designer ©Noora Sagnayeva
        span.footer__copyright__company  ©RSSchool and ©Yem Digital - 2021